<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Application")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=controlBarGroup, type=spark.components.Group, required=false
	name=contentGroup, type=spark.components.Group, required=false
	-->
	
	<!-- Define a gradient fill for the background of the Application container. -->    
	<s:Rect id="backgroundRect" left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:LinearGradient>
				<s:entries>
					<s:GradientEntry color="0xFE80DF" ratio="0.1" alpha="0.5"/>
					<s:GradientEntry color="0xAA80FE" ratio="0.3" alpha="0.4"/>
					<s:GradientEntry color="0x00FFFF" ratio="0.5" alpha="0.3"/>
					<s:GradientEntry color="0x99FF00" ratio="0.7" alpha="0.4"/>
					<s:GradientEntry color="0xFFCC00" ratio="0.9" alpha="0.5"/>
				</s:entries>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Group id="contentGroup" left="0" right="0" top="0" bottom="0" />
	
</s:Skin>
